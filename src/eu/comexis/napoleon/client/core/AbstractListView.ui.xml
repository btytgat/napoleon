<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.datagrid {
			border-bottom: 1px solid #ccc;
			text-align: left;
			margin-bottom: 4px;
		}
	</ui:style>


	<g:HTMLPanel>
		<div>
			<span>Filtrer la liste :</span><input ui:field="filter"></input><g:Button ui:field="reset">effacer</g:Button>
		</div>
		<table style="width:100%">
			<tr>
				<td align='center'>
					<c:CellTable ui:field='table' styleName="{style.datagrid}"></c:CellTable>
				</td>
			</tr>
			<tr>
				<td align='center'>
					<c:SimplePager ui:field='pager' />
				</td>
			</tr>
		</table>
		<g:Button ui:field="btnNew">Nouveau bien immobilier</g:Button>
		<g:Button ui:field="btnToDashBoard">Retour vers le dashboard</g:Button>
	</g:HTMLPanel>


</ui:UiBinder>
