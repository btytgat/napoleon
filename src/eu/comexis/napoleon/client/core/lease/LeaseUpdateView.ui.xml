<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:with field='res' type='eu.comexis.napoleon.client.resources.Resources' />

	<g:ScrollPanel>
		<g:HTMLPanel styleName="{res.css.detailTable}">

			<div class="{res.css.detailRow}">
				<span class="{res.css.detailCellInputLabel}">Référence :</span>
				<g:ListBox ui:field="reference" styleName="{res.css.detailCellInputText}"
					name="reference" />
				<span class="{res.css.detailCellInputLabel}">Année académique :</span>
				<g:SuggestBox ui:field="academicYear" styleName="{res.css.detailCellInputText}" />
			</div>

			<div class="{res.css.detailRow}">
				<span class="{res.css.detailCellInputLabel}">Locataire :</span>
				<g:ListBox ui:field="tenantName" styleName="{res.css.detailCellInputList}"
					name="tenantName" />
				<span class="{res.css.detailCellInputLabel}">Cooccupant(s) :</span>
				<g:TextArea ui:field="coocuppant" styleName="{res.css.detailCellInputList}"
					name="coocuppant"/>	
			</div>
			
			<div class="{res.css.detailRow} {res.css.separationRow}">
				<span class="{res.css.detailCellInputLabel}" style="width:100px">Date d'entrée :</span>
				<dp:DateBox ui:field="startDate" styleName="{res.css.detailCellInputText}"/>
				<span class="{res.css.detailCellInputLabel}" style="width:100px">Date de sortie :</span>
				<dp:DateBox ui:field="endDate" styleName="{res.css.detailCellInputText}"/>
				<span class="{res.css.detailCellInputLabel}" style="width:100px">Type de location :</span>
				<g:ListBox ui:field="type" styleName="{res.css.detailCellInputList}"
					name="type" />
			</div>
			
			<div class="{res.css.detailRow} {res.css.separationRow}">
				<span class="{res.css.detailCellInputLabel}" style="width:100px">ELE :</span>
				<dp:DateBox ui:field="eleDate" styleName="{res.css.detailCellInputText}"/>
				<span class="{res.css.detailCellInputLabel}" style="width:100px">ELS :</span>
				<dp:DateBox ui:field="elsDate" styleName="{res.css.detailCellInputText}"/>
			</div>
			
			<div class="{res.css.detailRow}">
				<span class="{res.css.detailCellInputLabel}" style="width:100px">Loyer (EUR) :</span>
				<g:TextBox ui:field="rent" styleName="{res.css.detailCellInputList}"
					name="rent" />
				<span class="{res.css.detailCellInputLabel}" style="width:100px">Charges (EUR) :</span>
				<g:TextBox ui:field="charges" styleName="{res.css.detailCellInputList}"
					name="charges" />
			</div>
			<div class="{res.css.detailRow}">
				<span class="{res.css.detailCellInputLabel}" style="width:100px">Garantie locative (EUR) :</span>
				<g:TextBox ui:field="deposit" styleName="{res.css.detailCellInputList}"
					name="deposit" />
				<span class="{res.css.detailCellInputLabel}" style="width:100px">Date :</span>
				<dp:DateBox ui:field="depositDate" styleName="{res.css.detailCellInputText}"/>
			</div>
			<div class="{res.css.detailRow}">
				<g:RadioButton ui:field="depositInCashYes" styleName="{res.css.detailCellInputList}"
					name="depositInCash" text="Cash"/>
				<g:RadioButton ui:field="depositInCashNo" styleName="{res.css.detailCellInputList}"
					name="depositInCash" text="Banque"/>
				<span class="{res.css.detailCellInputLabel}" style="width:100px">IBAN :</span>
				<g:TextBox ui:field="iban" styleName="{res.css.detailCellInputList}"
					name="iban" />
				<span class="{res.css.detailCellInputLabel}" style="width:100px">BIC :</span>
				<g:TextBox ui:field="bic" styleName="{res.css.detailCellInputList}"
					name="bic" />
			</div>
			
			<div class="{res.css.detailRow}">
				<span class="{res.css.detailCellInputLabel}" style="width:140px">Propriétaire (EUR) :</span>
				<g:TextBox ui:field="feeOwner" styleName="{res.css.detailCellInputList}"
					name="feeOwner" />
				<span class="{res.css.detailCellInputLabel}" style="width:140px">Honoraire (EUR) :</span>
				<g:TextBox ui:field="fee" styleName="{res.css.detailCellInputList}"
					name="fee" />
			</div>
			
			<div class="{res.css.detailRow}">
				<span class="{res.css.detailCellInputLabel}" style="width:140px">Référence comptable 460 :</span>
				<g:TextBox ui:field="bookkeepingRef" styleName="{res.css.detailCellInputList}"
					name="bookkeepingRef" />
			</div>
			
			<div class="{res.css.detailRow}">
				<span class="{res.css.detailCellInputLabel}" style="width:100px">Mobilier :</span>
				<g:RadioButton ui:field="hasFurnituresRentalYes" styleName="{res.css.detailCellInputList}"
					name="hasFurnituresRental" text="Yes"/>
				<g:RadioButton ui:field="hasFurnituresRentalNo" styleName="{res.css.detailCellInputList}"
					name="hasFurnituresRental" text="No"/>
				<span class="{res.css.detailCellInputLabel}" style="width:100px">Avec contrat :</span>
				<g:RadioButton ui:field="hasFurnituresWithContractYes" styleName="{res.css.detailCellInputList}"
					name="hasFurnituresWithContract" text="Yes"/>
				<g:RadioButton ui:field="hasFurnituresWithContractNo" styleName="{res.css.detailCellInputList}"
					name="hasFurnituresWithContract" text="No"/>
			</div>
			<div class="{res.css.detailRow}">
				<span class="{res.css.detailCellInputLabel}" style="width:160px">Somme annuelle (EUR) :</span>
				<g:TextBox ui:field="furnituresAmount" styleName="{res.css.detailCellInputList}"
					name="furnituresAmount" />
				<span class="{res.css.detailCellInputLabel}" style="width:140px">Date convenue:</span>
				<dp:DateBox ui:field="furnituresDate" styleName="{res.css.detailCellInputText}"/>
				<span class="{res.css.detailCellInputLabel}" style="width:140px">Paiement :</span>
				<g:RadioButton ui:field="furnituresPaymentOKYes" styleName="{res.css.detailCellInputList}"
					name="furnituresPayment" text="ok"/>
				<g:RadioButton ui:field="furnituresPaymentOKNo" styleName="{res.css.detailCellInputList}"
					name="furnituresPayment" text="Pas ok"/>
			</div>
			
			<div class="{res.css.detailRow}">
				
			</div>

			<div class="{res.css.separationRow}" style="clear: both;">

			</div>

			<div>
				<g:Button ui:field="btnSave">Sauver</g:Button>
				<g:Button ui:field="btnCancel">Annuler</g:Button>
			</div>
		</g:HTMLPanel>
	</g:ScrollPanel>
</ui:UiBinder>