<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<div>
			<span>Référence :</span>
			<g:TextBox ui:field="reference" />
			<span>Copropriété :</span>
			<g:TextBox ui:field="condo" />
		</div>
		<div>
			<span>Syndicat :</span>
			<g:TextBox ui:field="association" />
			<span>Adresse :</span>
			<g:TextBox ui:field="address" />
		</div>
		<div>
			<span>Téléphone :</span>
			<g:TextBox ui:field="phoneNumber" />
			<span>GSM :</span>
			<g:TextBox ui:field="mobileNumber" />
			<span>Mail :</span>
			<g:TextBox ui:field="email" />
		</div>
		<div>
			<span>Adresse du bien:</span>
			<g:TextBox ui:field="addressRealEstate" />
			<span>N°:</span>
			<g:TextBox ui:field="number" />
			<span>Boite:</span>
			<g:TextBox ui:field="box" />
		</div>

		<table>
			<tr id="country">
				<td>
					<span>Pays :</span>
					<g:ListBox ui:field="country" />
				</td>
				<td id="countryOther">
					<span>autre :</span>
					<g:TextBox ui:field="countryOther" />
				</td>
			</tr>
			<tr>
				<td>
					<span>Municipalité :</span>
					<g:ListBox ui:field="city" />
				</td>
				<td id="cityOther">
					<span>Autre municipalité :</span>
					<g:TextBox ui:field="cityOther" />
				</td>
			</tr>
		</table>
		<div>
			<span>Quartier:</span>
			<g:SuggestBox ui:field="square" />
			<span>Type de bien:</span>
			<g:ListBox ui:field="type" />
			<span>Etat:</span>
			<g:ListBox ui:field="state" />
			<span>Superficie:</span>
			<g:TextBox ui:field="dimension" />
			<span>m²</span>
		</div>
		<div>
			<span>Propriétaire:</span>
			<g:ListBox ui:field="ownerName" />
		</div>
		<div>
			<g:Button ui:field="btnSave">Sauver</g:Button>
			<g:Button ui:field="btnCancel">Annuler</g:Button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>