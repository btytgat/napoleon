<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:with field='res' type='eu.comexis.napoleon.client.resources.Resources' />

	<g:HTMLPanel styleName="{res.css.detailTable}">


		<div class="{res.css.detailRow}">
			<div class="{res.css.detailCellLabel}">
				<span>Nom :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="name" />
			</div>

		</div>

		<div class="{res.css.detailRow}">
			<div class="{res.css.detailCellLabel}">
				<span>Honoraires :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="fee" />
			</div>

			<div class="{res.css.detailCellLabel}">
				<span>IBAN :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="iban" />
			</div>

			<div class="{res.css.detailCellLabel}">
				<span>BIC :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="bic" />
			</div>
		</div>

		<div class="{res.css.detailRow}">
			<div class="{res.css.detailCellLabel}">
				<span>Adresse :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="addresse" />
			</div>

		</div>

		<div class="{res.css.detailRow}">
			<div class="{res.css.detailCellLabel}">
				<span>Téléphone :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="phoneNumber" />
			</div>

			<div class="{res.css.detailCellLabel}">
				<span>GSM :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="mobileNumber" />
			</div>

			<div class="{res.css.detailCellLabel}">
				<span>Fax :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="fax" />
			</div>

			<div class="{res.css.detailCellLabel}">
				<span>Email :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="email" />
			</div>

		</div>

		<div class="{res.css.detailRow}">
			<div class="{res.css.detailCellLabel}">
				<span>Date de naissance :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="birthDay" />
			</div>

			<div class="{res.css.detailCellLabel}">
				<span>Lieu de naissance</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="placeOfBirth" />
			</div>


		</div>

		<div class="{res.css.detailRow}">
			<div class="{res.css.detailCellLabel}">
				<span>Nationalité :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="nationality" />
			</div>

			<div class="{res.css.detailCellLabel}">
				<span>Profession :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="job" />
			</div>
		</div>

		<div class="{res.css.detailRow}">
			<div class="{res.css.detailCellLabel}">
				<span>Registre national :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="nationalRegister" />
			</div>

			<div class="{res.css.detailCellLabel}">
				<span>Situation de famille :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="maritalStatus" />
			</div>

			<div class="{res.css.detailCellLabel}">
				<span>Régime matrimonial :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="matrimonialRegime" />
			</div>
		</div>

		<div class="{res.css.detailRow}">
			<div class="{res.css.detailCellLabel}">
				<span>Biens immobiliers :</span>
			</div>
			<div class="{res.css.detailCellValue}">
				<span ui:field="estates" />
			</div>
		</div>


		<div style="clear: both;">

		</div>
		<div>

			<g:Button ui:field="btnUpdate">Editer</g:Button>
			<g:Button ui:field="btnDelete">Effacer</g:Button>
			<g:Button ui:field="btnToList">Retour vers la liste</g:Button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
